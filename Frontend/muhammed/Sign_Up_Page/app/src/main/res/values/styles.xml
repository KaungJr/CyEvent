<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#BE531C</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorAccent">#BE531C</item>

        <!-- Background and text colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColorSecondary">#888888</item>
        <item name="android:textColorHint">#888888</item>
    </style>

    <!-- Button style for Material Components Button -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Button style for Delete Event (red button) -->
    <style name="CustomDeleteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#D32F2F</item> <!-- Red color -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Default EditText style -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
